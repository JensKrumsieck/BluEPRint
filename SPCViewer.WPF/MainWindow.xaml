<Window x:Class="SPCViewer.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SPCViewer.WPF"
        xmlns:sys="clr-namespace:System;assembly=System.Runtime"
        xmlns:oxy="clr-namespace:OxyPlot.SkiaSharp.Wpf;assembly=OxyPlot.SkiaSharp.Wpf"
        xmlns:viewModel="clr-namespace:SPCViewer.ViewModel;assembly=SPCViewer.ViewModel"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        AllowDrop="True"
        Title="MainWindow" Height="550" Width="1000" >
    <Window.Resources>
        <DataTemplate x:Key="TabTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <oxy:PlotView x:Name="ThePlotView" Model="{Binding Path=Model}" Controller="{Binding Controller}"/>
                <ScrollViewer Grid.Column="1">
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap">
                            <Run Text="{Binding Path=Title, Mode=OneWay}" FontWeight="Bold"/>
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" Margin="0,10">
                            <Run Text="Path" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="{Binding Path=Spectrum.Title}"/>
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" Margin="0,10">
                            <Run Text="Creation Date" FontWeight="Bold"/>
                            <LineBreak/>
                            <Run Text="{Binding Path=Spectrum.CreationDate, Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap">
                            <Run Text="Integrals:" FontWeight="Bold"/>
                        </TextBlock>
                        <ListBox ItemsSource="{Binding Integrals}" Style="{StaticResource MaterialDesignFilterChipPrimaryListBox}" SelectionMode="Single">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}[{0:N2} - {1:N2}]: {2:N2}">
                                                <Binding Path="From"/>
                                                <Binding Path="To"/>
                                                <Binding Path="Value"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label>Integration Factor:</Label>
                            <TextBox Grid.Column="1" Text="{Binding IntegralFactor, Mode=TwoWay}" 
                                     materialDesign:HintAssist.HelperText="1 = absolute Integrals"
                                     materialDesign:HintAssist.Hint="Integration Factor"/>
                        </Grid>
                        <TextBlock TextWrapping="Wrap">
                            <Run Text="Peaks:" FontWeight="Bold"/>
                        </TextBlock>
                        <ListBox ItemsSource="{Binding Peaks}" Style="{StaticResource MaterialDesignFilterChipPrimaryListBox}" SelectionMode="Single">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock VerticalAlignment="Center">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0:N2}, {1:N2}">
                                                    <Binding Path="X"/>
                                                    <Binding Path="Value"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                        <Button VerticalAlignment="Center" Width="22" Padding="0" Margin="5 0" Height="22"
                                                Style="{StaticResource MaterialDesignFlatButton}" 
                                                Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListBox}}, Path=DataContext.DeleteCommand}" CommandParameter="{Binding}">
                                            <materialDesign:PackIcon Kind="Delete" Foreground="{DynamicResource SecondaryAccentBrush}" Width="16" Height="16"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </DataTemplate>
    </Window.Resources>
    <DockPanel>
        <ToolBarTray DockPanel.Dock="Top" Style="{DynamicResource MaterialDesignToolBarTray}" Background="#222831">
            <ToolBar Style="{DynamicResource ToolbarStyle}">
                <Button Style="{StaticResource ToolbarButton}" Click="Open_Click">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="Folder" HorizontalAlignment="Center"/>
                        <TextBlock Text="Open" TextWrapping="Wrap" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource ToolbarButton}">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="ContentSave" HorizontalAlignment="Center"/>
                        <TextBlock Text="Save" TextWrapping="Wrap" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Separator Style="{StaticResource SeparatorStyle}"/>
                <ListBox SelectedIndex="{Binding SelectedAction, Mode=TwoWay, IsAsync=True}" Background="Transparent" SelectionMode="Single">
                    <ListBoxItem Style="{StaticResource ToolbarListItem}">
                        <StackPanel>
                            <materialDesign:PackIcon Kind="MagnifyScan" HorizontalAlignment="Center"/>
                            <TextBlock Text="Zoom" TextWrapping="Wrap" TextAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Style="{StaticResource ToolbarListItem}">
                        <StackPanel>
                            <materialDesign:PackIcon Kind="FitToPageOutline" HorizontalAlignment="Center"/>
                            <TextBlock Text="Normalize" TextWrapping="Wrap" TextAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Style="{StaticResource ToolbarListItem}">
                        <StackPanel HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="BoxCutter" HorizontalAlignment="Center"/>
                            <TextBlock Text="Peak Picking" TextWrapping="Wrap" TextAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Style="{StaticResource ToolbarListItem}">
                        <StackPanel>
                            <materialDesign:PackIcon Kind="MathIntegral" HorizontalAlignment="Center"/>
                            <TextBlock Text="Integrate" TextWrapping="Wrap" TextAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
                <Separator Style="{StaticResource SeparatorStyle}"/>
            </ToolBar>
        </ToolBarTray>
        <TabControl x:Name="TabContainer" ContentTemplate="{StaticResource TabTemplate}" 
                    ItemsSource="{Binding Path=TabItems}" Drop="OnFileDrop" 
                    SelectedIndex="{Binding SelectedIndex, Mode=TwoWay}">
            <TabControl.ItemContainerStyle>
                <Style TargetType="TabItem">
                    <Setter Property="Header" Value="{Binding Title}"/>
                </Style>
            </TabControl.ItemContainerStyle>
        </TabControl>
    </DockPanel>
</Window>
